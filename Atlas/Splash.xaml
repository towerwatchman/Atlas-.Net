<Window x:Class="Atlas.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atlas"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        FontSize="13"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Splash" Height="200" Width="300">
    <Grid>
        <DockPanel>
            <ProgressBar x:Name="pbSplash" DockPanel.Dock="Bottom" Margin="40,0,40,0" Height="16" Width="Auto" Minimum="0" Maximum="100"/>
            <!--<TextBlock DockPanel.Dock="Bottom" Height="20" Width="Auto"/>-->
            <Image DockPanel.Dock="Top" Width="Auto" Source="{DynamicResource atlas_logo_full}" RenderOptions.BitmapScalingMode="HighQuality" Height="160"/>            
        </DockPanel>
    </Grid>
</Window>
