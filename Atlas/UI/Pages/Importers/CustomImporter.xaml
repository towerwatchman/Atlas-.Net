<Page x:Class="Atlas.UI.Pages.Importers.Custom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Atlas.UI.Pages.Importers"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Custom">
    <Grid Background="{DynamicResource Secondary}">
        <Grid Margin="20">
            <StackPanel Orientation="Vertical">
                <DockPanel Height="30"
                           Width="Auto"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Stretch"
                           LastChildFill="True"
                           Margin="0,0,0,10">
                    <Label DockPanel.Dock="Left"
                           Content="Game Path:"
                           HorizontalAlignment="Left" />
                    <Button x:Name="btn_OpenFolder"
                            DockPanel.Dock="Right"
                            Content="Set Folder"
                            Click="btn_OpenFolder_Click" />
                    <TextBox x:Name="tb_FolderDialog"
                             DockPanel.Dock="Left"
                             Width="Auto"
                             HorizontalAlignment="Stretch"
                             TextChanged="tb_FolderDialog_TextChanged" />
                </DockPanel>
                <DockPanel Height="30"
                           Width="Auto"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Stretch"
                           LastChildFill="True"
                           Margin="0,0,0,10">
                    <Label DockPanel.Dock="Left"
                           Content="Folder Structure:"
                           HorizontalAlignment="Left" />
                    <CheckBox x:Name="cb_format"
                              DockPanel.Dock="Right"
                              Content="Unstructured Format"
                              Click="cb_format_Click" />
                    <TextBox x:Name="tb_format"
                             DockPanel.Dock="Left"
                             Width="Auto"
                             HorizontalAlignment="Stretch" />
                </DockPanel>
                <DockPanel Height="30"
                           Width="Auto"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Stretch"
                           LastChildFill="True"
                           Margin="0,0,0,10">
                    <Label DockPanel.Dock="Left"
                           Content="Game Extensions:"
                           HorizontalAlignment="Left" />
                    <CheckBox x:Name="cb_compression"
                              DockPanel.Dock="Right"
                              Content="Extract Games"
                              Click="cb_compression_Click"
                              Checked="cb_compression_Checked" />
                    <TextBox x:Name="GameExt"
                             DockPanel.Dock="Left"
                             Width="Auto"
                             HorizontalAlignment="Stretch" />
                  
                </DockPanel>
                <DockPanel x:Name="ArchiveDockPanel" Height="30"
                           Width="Auto"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Stretch"
                           LastChildFill="True"
                           Margin="0,0,0,10">
                    <Label DockPanel.Dock="Left"
                           Content="Archive formats:"
                           HorizontalAlignment="Left" />
                    
                    <TextBox x:Name="ArchiveExt"
                             DockPanel.Dock="Left"
                             Width="Auto"
                             HorizontalAlignment="Stretch" />
                </DockPanel>
                <DockPanel 
                           Width="Auto"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Stretch"
                           LastChildFill="False">
                    <Label Margin="10,0,0,0"
                           DockPanel.Dock="Left"
                           Content="There are 4 valid options you can use for the folder structure: Title, Creator, Engine, and Version&#xA;- Each of the options need to be surrounded by braces {}. Use / for folders. &#xA;- If you have games that are not sorted, use the check box and the program will attempt to parse the title and version&#xA;&#xA;Examples&#xA;{engine}/{creator}/{title}/{version}&#xA;[{engine}] [{title}] [{version}]&#xA;{title-version}"
                           HorizontalAlignment="Left" />
                </DockPanel>
                <DockPanel HorizontalAlignment="Left"
                           Height="Auto"
                           Width="Auto">
                    <StackPanel>
                        <CheckBox x:Name="cbDownloadImages" Content="Download Images"
                                  Margin="10,10,0,0"
                                  Visibility="Visible"
                                  Checked="cbDownloadImages_Checked" />
                        <CheckBox x:Name="cbMoveGame" Content="Move to Atlas game folder"
                                  Margin="10,10,0,0"
                                  Visibility="Visible"
                                  Opacity=".5"
                                  IsEnabled="False"
                                  Checked="cbMoveGame_Checked" />
                        <CheckBox x:Name="cbScanFolderSize" Content="Scan folder size duing import"
                                  Margin="10,10,0,0"
                                  Visibility="Visible"
                                  Checked="cbScanFolderSize_Checked" />
                        <CheckBox x:Name="cb_DeleteFolder" Content="Delete Folder After Extraction"
                                  Margin="10,10,0,0"
                                  Checked="cb_DeleteFolder_Checked" />
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
