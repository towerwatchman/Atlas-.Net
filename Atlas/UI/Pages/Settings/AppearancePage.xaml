<Page x:Class="Atlas.UI.Pages.Settings.AppearancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlas.UI.Pages.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppearancePage">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <Label Content="Select a Theme" />
            <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="cbThemes" Width="200"></ComboBox>
            <Button x:Name="bLoadTheme" Content="Load" Margin="20,0,0,0"
                        Click="bLoadTheme_Click"></Button>

        </StackPanel>
        </StackPanel>
    </Grid>
</Page>
