<Page x:Class="Atlas.UI.Pages.Settings.AppearancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Atlas.UI.Pages.Settings"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="AppearancePage">
    <Grid Background="Transparent">
        <StackPanel Orientation="Vertical"
                    Margin="20">
            <DockPanel Margin="0,10,0,0">
                <Label Content="Select a Theme:"
                       Margin="0,0,10,0"
                       MinWidth="120" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <ComboBox x:Name="cbThemes"
                              MinWidth="300"
                              SelectedIndex="0"
                              HorizontalAlignment="Right" />
                    <Button x:Name="bLoadTheme"
                            Content="Load"
                            Margin="20,0,0,0"
                            Click="bLoadTheme_Click"
                            HorizontalAlignment="Right" />
                </StackPanel>
            </DockPanel>
            <Label Content="Default Altas Theme. Changes are saved as soon as theme file is loaded"
                   FontSize="10"
                   Opacity=".50" />
            <Separator Margin="5,2,5,0"
                       Background="{DynamicResource Text}"
                       Height="1"
                       Opacity=".25" />
            <DockPanel Margin="0,10,0,0">
                <Label Content="Select a Banner UI Resource:"
                       Margin="0,0,10,0"
                       MinWidth="120" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <ComboBox x:Name="cbBanners"
                              MinWidth="300"
                              SelectedIndex="0"
                              HorizontalAlignment="Right"
                              MouseDown="cbBanners_MouseDown" />
                    <Button x:Name="bLoadBanner"
                            Content="Load"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Right"
                            Click="bLoadBanner_Click" />
                </StackPanel>
            </DockPanel>
            <Label Content="This will override the default banner layout. Please check for errors prior to loading"
                   FontSize="10"
                   Opacity=".50" />
            <Separator Margin="5,2,5,0"
                       Background="{DynamicResource Text}"
                       Height="1"
                       Opacity=".25" />
            <DockPanel Margin="0,10,0,0">
                <Label Content="Open Xaml Editor"
                       Margin="0,0,10,0"
                       MinWidth="120" />
                <Button x:Name="bOpenXamlEditor"
                        Content="Launch"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Right"
                        Click="bOpenXamlEditor_Click" />
            </DockPanel>
            <Label Content="Create and modify existing banner themes"
                   FontSize="10"
                   Opacity=".50" />
            <Separator Margin="5,2,5,0"
                       Background="{DynamicResource Text}"
                       Height="1"
                       Opacity=".25" />
        </StackPanel>
    </Grid>
</Page>
