<Page x:Class="Atlas.UI.Pages.Settings.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlas.UI.Pages.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryPage">

    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="20">
            <DockPanel Height="30"
                       Width="Auto"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Stretch"
                       LastChildFill="True">
                <Label DockPanel.Dock="Left"
                       Content="Root Path:"
                       HorizontalAlignment="Left" />               
                <TextBox x:Name="tb_AtlasRoot"
                         DockPanel.Dock="Left"
                         Width="Auto"
                         HorizontalAlignment="Stretch" IsEnabled="False" Opacity=".75"/>
            </DockPanel>
            <Label Content="Atlas local path. This is dynamic and will change if you move the program."
                   FontSize="10"
                   Opacity=".50" />
            <Separator Margin="5,2,5,0"
                       Background="{DynamicResource Text}"
                       Height="1"
                       Opacity=".25" />
            <DockPanel Height="30"
                       Width="Auto"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Stretch"
                       LastChildFill="True" Margin="0,10,0,0">
                <Label DockPanel.Dock="Left"
                       Content="Game Folder:"
                       HorizontalAlignment="Left" />
                <Button x:Name="btn_SetGameFolder"
                        DockPanel.Dock="Right"
                        Content="Set Folder"
                        Click="btn_SetGameFolder_Click" />
                
                <TextBox x:Name="tb_GameFolder"
                         DockPanel.Dock="Left"
                         Width="Auto"
                         HorizontalAlignment="Stretch"
                         TextChanged="tb_GameFolder_TextChanged" />
            </DockPanel>
            <Label Content="All extracted or moved games will go here"
                   FontSize="10"
                   Opacity=".50" />
            <Separator Margin="5,2,5,0"
                       Background="{DynamicResource Text}"
                       Height="1"
                       Opacity=".25" />
        </StackPanel>
    </Grid>
</Page>
