<Page x:Class="Atlas.UI.Pages.GameDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Atlas.UI.Pages"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      d:DesignHeight="720"
      d:DesignWidth="1280"
      Title="GameDetailPage"
      Background="{DynamicResource Primary}">
    <Grid>
        <!-- Set Images. There are a total of 4 to get the effect-->
        <Grid Panel.ZIndex="1">
            <!-- FWD image. Uniform -->
            <Image x:Name="banner_main"
                   Source="/Assets/Images/config_image.webp"
                   Height="225"
                   Width="Auto"
                   Panel.ZIndex="1"
                   VerticalAlignment="Top"
                   Stretch="Uniform"></Image>
        </Grid>
        <!--#region Current Version Selected -->
        
        <StackPanel Orientation="Horizontal"
                    Panel.ZIndex="20" >
            <Border  BorderBrush="{DynamicResource Accent}"
                     BorderThickness="0,0,0,1"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top">
                <Grid Height="24"
                      Margin="0,0,0,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      Background="{DynamicResource Canvas}">
                    <!-- Center 
            <Rectangle Width="375"
                       Fill="{DynamicResource Accent}"
                       HorizontalAlignment="Left" Margin="0,1,0,0" Height="24"/>
            <Rectangle Width="375"
                       Fill="{DynamicResource Canvas}"
                       HorizontalAlignment="Left" Height="24">                
            </Rectangle>-->
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Title:"
                               HorizontalAlignment="Left"
                               VerticalContentAlignment="Center"
                               Margin="20,-2,0,0"
                               Padding="0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="{DynamicResource Accent}" />
                        <Label x:Name="Title"
                               Content="None"
                               HorizontalAlignment="Left"
                               VerticalContentAlignment="Center"
                               Margin="5,-2,0,0"
                               Padding="0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource Text}" />
                        <Label Content="Version:"
                               HorizontalAlignment="Left"
                               VerticalContentAlignment="Center"
                               Margin="20,-2,0,0"
                               Padding="0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="{DynamicResource Accent}" />
                        <!-- Add padding to last element so its not touching object-->
                        <Label x:Name="CurrentVersion"
                               Content="None"
                               HorizontalAlignment="Left"
                               VerticalContentAlignment="Center"
                               Margin="5,-2,20,0"
                               Padding="0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource Text}" />
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Right Corner-->
            <Grid Margin="-1,0,0,0">
                <Polygon Fill="{DynamicResource Accent}"
                         Stretch="Uniform"
                         Height="25"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         Panel.ZIndex="5"
                         Margin="0,0,0,0"
                         RenderOptions.EdgeMode="Aliased">
                    <Polygon.Points>
                        <Point X="-25"
                               Y="26" />
                        <Point X="-26"
                               Y="26" />
                        <Point X="-26"
                               Y="0" />
                        <Point X="1"
                               Y="0" />
                    </Polygon.Points>
                </Polygon>
                <Polygon Fill="{DynamicResource Canvas}"
                         Stretch="Uniform"
                         Height="24"
                         Width="24"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         Panel.ZIndex="5"
                         Margin="0,0,0,0"
                         RenderOptions.EdgeMode="Aliased">
                    <Polygon.Points>                        
                        <Point X="-26"
                               Y="26" />
                        <Point X="-26"
                               Y="26" />
                        <Point X="-26"
                               Y="0" />
                        <Point X="0"
                               Y="0" />
                    </Polygon.Points>
                </Polygon>
            </Grid>
        </StackPanel>
        <!--#endregion-->
        <ScrollViewer Panel.ZIndex="2"
                      Background="Transparent">
            <Grid x:Name="Header"
                  Panel.ZIndex="2">
                <Grid Margin="0,225,0,0"
                      Panel.ZIndex="3"
                      Background="{DynamicResource Secondary}">
                    <!-- All content goes in this Grid-->
                    <Grid Panel.ZIndex="3"
                          Background="{DynamicResource Canvas}"
                          Opacity=".95"
                          Height="60"
                          VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal"
                                    Margin="20,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                            <Button Style="{StaticResource TransparentButton}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Width="140"
                                    Height="38">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,.5"
                                                         StartPoint="0,.5">
                                        <GradientStop Color="#7FD500" />
                                        <GradientStop Color="#58C000"
                                                      Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Image Source="{svgc:SvgImage Source=/Assets/Icons/play_normal.svg, AppName=Atlas}"
                                       Width="70"
                                       Height="30" />
                            </Button>
                            <Button x:Name="ShowVersions"
                                    VerticalAlignment="Top"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource TransparentButton}"
                                    Width="20"
                                    Height="38"
                                    Background="#58C000">
                                <Grid>
                                    <Image Source="{svgc:SvgImage Source=/Assets/Icons/down_arrow_wide.svg, AppName=Atlas}"
                                           Width="15"
                                           Height="20" />
                                </Grid>
                            </Button>
                            <!-- Last Played -->
                            <StackPanel Margin="30,0,0,0"
                                        Orientation="Vertical">
                                <Label Content="LAST PLAYED"
                                       Foreground="{DynamicResource Text}"
                                       FontWeight="Bold"
                                       Padding="1" />
                                <Label Content="Never"
                                       Foreground="{DynamicResource Text}"
                                       Padding="1" />
                            </StackPanel>
                            <!-- Play Time -->
                            <StackPanel Margin="30,0,0,0"
                                        Orientation="Vertical">
                                <Label Content="PLAY TIME"
                                       Foreground="{DynamicResource Text}"
                                       FontWeight="Bold"
                                       Padding="1" />
                                <Label Content="00:00:00"
                                       Foreground="{DynamicResource Text}"
                                       Padding="1" />
                            </StackPanel>
                            <!-- File Size -->
                            <StackPanel Margin="30,0,0,0"
                                        Orientation="Vertical">
                                <Label Content="STORAGE USED"
                                       Foreground="{DynamicResource Text}"
                                       FontWeight="Bold"
                                       Padding="1" />
                                <Label Content="0 MB"
                                       Foreground="{DynamicResource Text}"
                                       Padding="1" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,15,20,0"
                                    Orientation="Horizontal">
                            <Button Width="30"
                                    Height="30"
                                    Style="{StaticResource TransparentButton}"
                                    Background="{DynamicResource Secondary}"
                                    Margin="10,0,0,0">
                                <Image Source="{svgc:SvgImage Source=/Assets/Icons/settings.svg, AppName=Atlas}"
                                       Width="20"
                                       Height="20" />
                            </Button>
                            <Button Width="30"
                                    Height="30"
                                    Style="{StaticResource TransparentButton}"
                                    Background="{DynamicResource Secondary}"
                                    Margin="10,0,0,0">
                                <Image Source="{svgc:SvgImage Source=/Assets/Icons/info.svg, AppName=Atlas}"
                                       Width="20"
                                       Height="20" />
                            </Button>
                            <Button Width="30"
                                    Height="30"
                                    Style="{StaticResource TransparentButton}"
                                    Background="{DynamicResource Secondary}"
                                    Margin="10,0,0,0">
                                <Image Source="{svgc:SvgImage Source=/Assets/Icons/rating_icon.svg, AppName=Atlas}"
                                       Width="20"
                                       Height="20" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
