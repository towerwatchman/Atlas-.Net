<Window x:Class="Atlas.UI.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atlas.UI.Windows"
        mc:Ignorable="d"
        Background="Transparent"
AllowsTransparency="True"
ResizeMode="CanResize"
WindowStyle="None" 
MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen"
        Title="SettingsWindow" Height="600" Width="850">
    <Border BorderBrush="{DynamicResource WindowAccent}" BorderThickness="1" CornerRadius="6" RenderOptions.BitmapScalingMode="HighQuality">
        <Grid>
            <Grid.OpacityMask>
                <VisualBrush Visual="{Binding ElementName=Border1}" />
            </Grid.OpacityMask>
            <Border x:Name="Border1" CornerRadius="6" Background="Black" BorderThickness="0" />
            <!-- #region Minimize, Maximize, Close -->
            <StackPanel Grid.RowSpan="2"
                        Panel.ZIndex="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,3,3,0">
                <Button x:Name="minimizeButton"
                        Click="MinimizeButton_Click"
                        Style="{DynamicResource MinMaxStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource minimize_icon}" />
                </Button>
                <Button x:Name="maximizeButton"
                        Click="MaximizeButton_Click"
                        Style="{DynamicResource MinMaxStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource maximize_icon}" />
                </Button>
                <Button x:Name="closeButton"
                        Click="CloseButton_Click"
                        Style="{DynamicResource ExitStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource close_iconDrawingImage}" />
                </Button>
            </StackPanel>
            <!--#endregion-->
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Background="{DynamicResource Primary}">
                    <Label Content="ATLAS SETTINGS" Foreground="{DynamicResource Element_Selected}" HorizontalContentAlignment="Center" Margin="0,15,0,5" FontWeight="DemiBold" FontSize="14"/>
                    <ListBox Width="180" BorderThickness="0" Background="Transparent">
                        <ListBoxItem x:Name="Interface" MouseUp="OnListBoxNavButtonUp">
                            <StackPanel Orientation="Horizontal" >
                                <Path Data="{DynamicResource interface_icon}"
                                      Fill="{DynamicResource Text}"
                                      RenderTransformOrigin="0.1, 0.5" Margin="0">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.50"
                                                        ScaleY="0.50" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Interface" Margin="-10,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="Library"
                                     MouseUp="OnListBoxNavButtonUp">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource library_icon}"
                                      Fill="{DynamicResource Text}"
                                      VerticalAlignment="Bottom"
                                      RenderTransformOrigin="0.1, 0.4">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.40"
                                                        ScaleY="0.40" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Library" Margin="-10,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Opacity=".5">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource platforms_icon}"
                                      Fill="{DynamicResource Text}"
                                      RenderTransformOrigin="0.1, 0.4">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.50"
                                                        ScaleY="0.50" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Platforms" Margin="-10,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Opacity=".5">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource game_icon}"
                                      Fill="{DynamicResource Text}"
                                      RenderTransformOrigin="0.1, 0.4"
                                      VerticalAlignment="Center" Width="25" Height="25">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.65"
                                                        ScaleY="0.65" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Emulators"
                                       Margin="-3,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <Separator/>
                        <ListBoxItem x:Name="Appearance" MouseUp="OnListBoxNavButtonUp">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource appearance_icon}"
                                      Fill="{DynamicResource Text}"
                                      VerticalAlignment="Bottom"
                                      RenderTransformOrigin="0.1, 0.4">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.55"
                                                        ScaleY="0.55" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Appearance" Margin="-10,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Opacity=".5">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource metadata_icon}"
                                      Fill="{DynamicResource Text}"
                                      RenderTransformOrigin="0.1, 0.4"
                                      Margin="0">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.50"
                                                        ScaleY="0.50" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Metadata" Margin="-10,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Opacity=".5">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource search_icon}"
                                      Fill="{DynamicResource Text}"
                                      VerticalAlignment="Bottom"
                                      RenderTransformOrigin="0.1, 0.4">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.50"
                                                        ScaleY="0.50" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Search"
                                       Margin="-10,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Opacity=".5">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource import_icon}"
                                      Fill="{DynamicResource Text}"
                                      VerticalAlignment="Bottom" Width="25">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.75"
                                                        ScaleY="0.75" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Downloads" Margin="-3,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Opacity=".5">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource notification_icon}"
                                      Fill="{DynamicResource Text}"
                                      RenderTransformOrigin="0.1, 0.6"
                                      Margin="0">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.60"
                                                        ScaleY="0.60" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Notifications" Margin="2,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Opacity=".5">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{DynamicResource database_icon}"
                                      Fill="{DynamicResource Text}"
                                      VerticalAlignment="Bottom"
                                      RenderTransformOrigin="0.1, 0.4">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="0.55"
                                                        ScaleY="0.45" />
                                    </Path.RenderTransform>
                                </Path>
                                <Label Content="Storage" Margin="-6,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
                <DockPanel DockPanel.Dock="Right"
                           LastChildFill="True"
                           Background="{DynamicResource Secondary}" >
                    <Label x:Name="SettingsLabel" Content="SETTINGS"
                           Foreground="AliceBlue"
                           Height="45" FontSize="25" FontWeight="Bold" VerticalAlignment="Top" Margin="25,10,0,10" DockPanel.Dock="Top" />
                    <Frame x:Name="SettingsFrame"
                           Background="Transparent"
                           DockPanel.Dock="Bottom"
                           NavigationUIVisibility="Hidden" />
                </DockPanel>
                
            </DockPanel>
        </Grid>
    </Border>
</Window>
