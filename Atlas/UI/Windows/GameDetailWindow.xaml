<Window x:Class="Atlas.UI.Windows.GameDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atlas.UI.Windows"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen"
        Title="GameDetailWindow"
        Height="600"
        Width="850">
    <Border BorderBrush="{DynamicResource WindowAccent}"
            BorderThickness="1"
            CornerRadius="6"
            RenderOptions.BitmapScalingMode="HighQuality">
        <Grid>
            <Grid.OpacityMask>
                <VisualBrush Visual="{Binding ElementName=Border1}" />
            </Grid.OpacityMask>
            <Border x:Name="Border1"
                    CornerRadius="6"
                    Background="Black"
                    BorderThickness="0" />
            <!-- #region Minimize, Maximize, Close -->
            <StackPanel Grid.RowSpan="2"
                        Panel.ZIndex="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,3,3,0">
                <Button x:Name="minimizeButton"
                        Click="MinimizeButton_Click"
                        Style="{DynamicResource MinMaxStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource minimize_icon}" />
                </Button>
                <Button x:Name="maximizeButton"
                        Click="MaximizeButton_Click"
                        Style="{DynamicResource MinMaxStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource maximize_icon}" />
                </Button>
                <Button x:Name="closeButton"
                        Click="CloseButton_Click"
                        Style="{DynamicResource ExitStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource close_iconDrawingImage}" />
                </Button>
            </StackPanel>
            <!--#endregion-->
            <StackPanel Orientation="Vertical">
                <Grid Height="32" DockPanel.Dock="Top" Background="{DynamicResource Secondary}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
