<Window x:Class="Atlas.UI.Windows.GameDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atlas.UI.Windows"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen"
        Title="GameDetailWindow"
        Height="600"
        Width="850">
    <Border BorderBrush="{DynamicResource WindowAccent}"
            BorderThickness="1"
            CornerRadius="6"
            RenderOptions.BitmapScalingMode="HighQuality">
        <Grid>
            <Grid.OpacityMask>
                <VisualBrush Visual="{Binding ElementName=Border1}" />
            </Grid.OpacityMask>
            <Border x:Name="Border1"
                    CornerRadius="6"
                    Background="Black"
                    BorderThickness="0" />
            <!-- #region Minimize, Maximize, Close -->
            <StackPanel Grid.RowSpan="2"
                        Panel.ZIndex="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,3,3,0">
                <Button x:Name="minimizeButton"
                        Click="MinimizeButton_Click"
                        Style="{DynamicResource MinMaxStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource minimize_icon}" />
                </Button>
                <Button x:Name="maximizeButton"
                        Click="MaximizeButton_Click"
                        Style="{DynamicResource MinMaxStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource maximize_icon}" />
                </Button>
                <Button x:Name="closeButton"
                        Click="CloseButton_Click"
                        Style="{DynamicResource ExitStyle}">
                    <Image Height="10"
                           Width="10"
                           Stretch="Uniform"
                           Source="{DynamicResource close_iconDrawingImage}" />
                </Button>
            </StackPanel>
            <!--#endregion-->
            <DockPanel>
                <Grid Height="32"
                      DockPanel.Dock="Top"
                      Background="{DynamicResource Primary}">
                    <Label Margin="10,0,0,0" Content="Edit Game Details"
                           Foreground="{DynamicResource Text}" />
                </Grid>
                    <DockPanel  DockPanel.Dock="Top"
                            Width="Auto"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{DynamicResource Secondary}">
                    <Grid DockPanel.Dock="Bottom"
                          Height="60"
                          Background="{DynamicResource Primary}"
                          VerticalAlignment="Stretch">                        
                      
                        <DockPanel HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="10">
                            <Button x:Name="btn_next"
                                    Content="Save"
                                    Margin="4"
                                     />
                            <Button x:Name="btn_cancel"
                                    Content="Cancel"
                                    Margin="4"
                                     />
                        </DockPanel>
                    </Grid>
                    <Grid DockPanel.Dock="Top">
                        <TabControl Background="{DynamicResource Secondary}">
                            <TabItem Header="Record">
                                <ScrollViewer Margin="-2">
                                <StackPanel Orientation="Vertical">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Vertical" Grid.Column="0">
                                            <DockPanel>
                                                <Label Content="Title"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Short Name" MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Platform"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Engine"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Developer"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Publisher"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Release Date"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                        <DockPanel>
                                                <Label Content="Status"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Grid.Column="1">
                                            <DockPanel>
                                                <Label Content="Category"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Latest Version"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Censored"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Language"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Translations"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Genre"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Voice"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Rating"
                                                       MinWidth="100" />
                                                <TextBox></TextBox>
                                            </DockPanel>
                                        </StackPanel>
                                    </Grid>
                                    <DockPanel Margin="0,10,0,0">
                                        <Label Content="Tags" MinWidth="100" />
                                        <TextBox MinHeight="100" />
                                    </DockPanel>
                                    <DockPanel Margin="0,10,0,0">
                                        <Label Content="Description" MinWidth="100"/>
                                        <TextBox MinHeight="200"/>
                                    </DockPanel>
                                    
                                    <Grid>
                                        
                                    </Grid>
                                </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                            <TabItem Header="Advanced" />
                            <TabItem Header="Media" />
                            <TabItem Header="Mappings" />
                            <TabItem Header="Installtion" />
                        </TabControl>
                    </Grid>
                </DockPanel>
            </DockPanel>
        </Grid>
    </Border>
</Window>
