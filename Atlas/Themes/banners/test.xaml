<!-- f95.xaml -->
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Border Background="LightGray" BorderBrush="Black" BorderThickness="1">
		<StackPanel Margin="5">
			<!-- Static content to confirm rendering -->
			<TextBlock Text="STATIC TEST" Foreground="Red" FontSize="20"/>
			<!-- Basic bindings -->
			<TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
			<TextBlock Text="{Binding Creator}" FontSize="12"/>
			<!-- Async image -->
			<Image Source="{Binding BannerImage}" Width="100" Height="50" Stretch="Uniform"/>
			<TextBlock Text="Update Available!"
                      
                       Foreground="Green"/>
		</StackPanel>
	</Border>
</UserControl>