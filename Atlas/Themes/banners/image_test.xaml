<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Atlas.UI"
             xmlns:viewmodel="clr-namespace:Atlas.UI.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:GameViewModel}"
             mc:Ignorable="d"
             FontFamily="sans-serif">
    <!--#region Resources-->
    <UserControl.Resources>
        <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:Double x:Key="bannerX">537</sys:Double>
            <sys:Double x:Key="bannerY">251</sys:Double>           
        </ResourceDictionary>
    </UserControl.Resources>
    <!--#endregion-->
    <Grid x:Name="LayoutRoot"
          Margin="2">
        <Grid Margin="1">
            <!--#region Banner Image Data-->
            <Image Source="{Binding BannerImage, IsAsync=True, Mode=OneWay}"
                   Stretch="Fill"
                   Height="{DynamicResource bannerY}"
                   Width="{DynamicResource bannerX}" />
            <!--#endregion-->
        </Grid>
    </Grid>
</UserControl>
