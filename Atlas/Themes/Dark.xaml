<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    This theme file will change all colors in the app.
    Canvas: This is the background color of the app. 
    Shadow: This is the shadow for any object that has one
    Primary: Header, Footer, Nav Bar
    Secondary: Buttons, ListBox
    Tertiary: All Grids, Panels, ListViews
    Accent:Nav Buttons Hover, Top Left logo backgrond, All hover effects
    AccentBar: Bar at top of program. This is the only thing it will change
    AtlasLogo: Logo Color
    Border: Any border used in the program
    Selected: button selected
    Text: All text in program. Does not include banners.
    Highlight: Text Hover Effect color
    -->
    <!-- PRIMARY COLORS -->
    <SolidColorBrush x:Key="Canvas"
                     Color="#000000" />
    <SolidColorBrush x:Key="Primary"
                     Color="Gray" />
    <SolidColorBrush x:Key="Secondary"
                     Color="SaddleBrown" />
    <SolidColorBrush x:Key="Tertiary"
                     Color="Green" />
    <!-- LOGO -->
    <SolidColorBrush x:Key="AltasLogo_Foreground"
                     Color="DarkGreen" />
    <SolidColorBrush x:Key="AltasLogo_Background"
                     Color="Magenta" />
    <!-- UI MODS -->
    <SolidColorBrush x:Key="Shadow"
                     Color="#000000" />
    <SolidColorBrush x:Key="WindowAccent"
                     Color="DarkBlue" />
    <SolidColorBrush x:Key="AccentBar"
                     Color="OrangeRed" />
    
    <!-- BUTTONS -->
    <SolidColorBrush x:Key="Element_Normal"
                     Color="Orange" />
    <SolidColorBrush x:Key="Element_Selected"
                     Color="DarkSeaGreen" />
    <!-- ELEMENT COLORS -->
    <SolidColorBrush x:Key="Border"
                     Color="red" />
    <SolidColorBrush x:Key="Border_Hover"
                     Color="yellow" />
    <SolidColorBrush x:Key="Selected"
                     Color="#404249" />    
    <SolidColorBrush x:Key="Text"
                     Color="#d2d2d2" />
    <SolidColorBrush x:Key="Highlight"
                     Color="#FFFFFF" />
    <SolidColorBrush x:Key="Text_Hover"
                     Color="yellow" />
</ResourceDictionary>